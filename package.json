{
  "name": "claude-rag-plugin",
  "version": "1.0.0",
  "type": "module",
  "description": "Production-ready Claude Code plugin with ChromaDB vector embeddings, intelligent document retrieval, and MAF orchestration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-rag": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:mcp": "node dist/mcp/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "claude",
    "rag",
    "chromadb",
    "vector-database",
    "embeddings",
    "mcp",
    "ai-agents",
    "document-retrieval"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "chromadb": "^1.8.1",
    "chromadb-default-embed": "^2.13.2",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "glob": "^10.3.10",
    "lru-cache": "^10.2.0",
    "openai": "^4.67.0",
    "ora": "^8.0.1",
    "p-queue": "^8.0.1",
    "p-retry": "^6.2.0",
    "pdf-parse": "^2.4.5",
    "uuid": "^9.0.1",
    "voyageai": "^0.0.3",
    "winston": "^3.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
